<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/loginstyle.css"> 
</head>
<body>
    <div class="form-container">
        <h2>Login</h2>
        <form id="login-form" action="/login" method="post">
            <div class="form-group">
                <label for="username">Username: </label>
                <input type="text" id="username" name="username" placeholder="Enter your username" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="submit-btn">Login</button><br>
            <button type="button" id="request-password-btn" class="submit-btn">Request Password</button>
        </form>
        <p>Don't have an account? <a href="/signup">Sign Up</a></p>
    </div>

    <script>
        document.getElementById('request-password-btn').addEventListener('click', async () => {
            try {
                const username = document.getElementById('username').value;
                const response = await fetch('/request-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username })
                });

                // Check if the response is ok and of type JSON
                if (response.ok) {
                    const result = await response.json();
                    
                    if (result.success) {
                        alert(`Login successful`);
                        //alert(`Generated String: ${result.generatedString}`);
                        document.getElementById('password').value = result.generatedString;
                        document.getElementById('login-form').submit();
                    } else {
                        alert('Failed to generate a valid string.');
                    }
                } else {
                    // If not ok, handle the error (e.g., show message)
                    const text = await response.text(); // Read the HTML response
                    console.error('Error fetching password:', text);
                    alert('Error: Could not request password. Please try again.');
                }
            } catch (error) {
                console.error('Fetch error:', error);
            }
        });
    </script>
</body>
</html>